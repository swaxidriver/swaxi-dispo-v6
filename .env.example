# Swaxi Dispo v6 - Environment Configuration Template
# Copy this file to .env and update values as needed

# ==========================================
# CORE FEATURE FLAGS
# ==========================================

# Enable SharePoint integration (true/false)
# Default: false - Uses IndexedDB or memory for local development
VITE_ENABLE_SHAREPOINT=false

# ==========================================
# BACKEND CONFIGURATION
# ==========================================

# Select data repository backend
# Options: memory | indexeddb | idx | sharepoint
# - memory: In-memory storage (development, data lost on refresh)
# - indexeddb/idx: Browser IndexedDB (persistent local storage)
# - sharepoint: SharePoint integration (requires VITE_ENABLE_SHAREPOINT=true)
# Default: memory
VITE_SHIFT_BACKEND=memory

# ==========================================
# ENVIRONMENT SETTINGS
# ==========================================

# Application environment
# Options: development | staging | production
# Default: development
VITE_ENVIRONMENT=development

# ==========================================
# FIREBASE CONFIGURATION (OPTIONAL)
# ==========================================
# Firebase is currently stubbed/disabled in the application
# These variables are validated but not actively used
# Remove these if Firebase integration is not planned

# Firebase project credentials
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ==========================================
# FIREBASE DEVELOPMENT SETTINGS
# ==========================================

# Use Firebase emulator for development (true/false)
# Default: false
VITE_USE_FIREBASE_EMULATOR=false

# Firebase emulator host
# Default: localhost
VITE_FIREBASE_EMULATOR_HOST=localhost

# Firebase emulator port
# Default: 8080
VITE_FIREBASE_EMULATOR_PORT=8080
